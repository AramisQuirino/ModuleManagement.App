@page "/configuracion"
@using System.Net.Http.Json
@inject HttpClient Http

<div class="container my-4">
    <h1 class="mb-4">Configuration Screen</h1>

    <!-- Menú de pestañas -->
    <ul class="nav nav-tabs" id="configTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="companies-tab" data-bs-toggle="tab" data-bs-target="#companies" type="button" role="tab" aria-controls="companies" aria-selected="true">
                Empresas
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="colors-tab" data-bs-toggle="tab" data-bs-target="#colors" type="button" role="tab" aria-controls="colors" aria-selected="false">
                Colorimetría
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="linkpro-tab" data-bs-toggle="tab" data-bs-target="#linkpro" type="button" role="tab" aria-controls="linkpro" aria-selected="false">
                LinkPro
            </button>
        </li>
    </ul>

    <!-- Contenido de las pestañas -->
    <div class="tab-content" id="configTabsContent">
        <div class="tab-pane fade show active" id="companies" role="tabpanel" aria-labelledby="companies-tab">
            <div class="p-3">
                <h3>Empresas</h3>
                <!-- Aquí puedes agregar la lógica para mostrar la lista de empresas, editar, etc. -->
                <p>Se mostrarán las empresas registradas.</p>
            </div>
        </div>
        <div class="tab-pane fade" id="colors" role="tabpanel" aria-labelledby="colors-tab">
            <div class="p-3">
                <h3>Colorimetría</h3>
                <!-- Lógica para configurar la colorimetría -->
                <p>Aquí se mostrará la configuración de colorimetría.</p>
            </div>
        </div>
        <div class="tab-pane fade" id="linkpro" role="tabpanel" aria-labelledby="linkpro-tab">
            <div class="p-3">
                <h3>LinkPro</h3>
                <!-- Lógica para configurar LinkPro -->
                <p>Aquí se mostrará la configuración de LinkPro.</p>
            </div>
        </div>
    </div>
</div>
